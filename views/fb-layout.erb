  <%= erb(:'partials/fb-footer', :layout => false) %>
</div>
<div id="fb-root"></div>
<script>
	window.fbAsyncInit = function() {
		FB.init({appId: "183431315036552",
                           status: true,
                           cookie: true,
                           xfbml: true});
		FB.Canvas.setSize();
	};
	(function() {
		var e = document.createElement('script'); e.async = true;
		e.src = document.location.protocol +
			'//connect.facebook.net/es_LA/all.js';
